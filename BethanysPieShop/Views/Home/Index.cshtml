@model BethanysPieShop.ViewModels.HomeViewModel

<h2>@Model.Title</h2>
   
@foreach (var pie in Model.Pies)
{
   <div class="col-sm-4">
      <div class="thumbnail">
         <img src="@pie.ImageThumbnailUrl" alt="Image" />
         <div class="caption">
            <h3 class="pull-right">@pie.Price.ToString("C2")</h3>
            <h3>
               @pie.Name
            </h3>
            <p>@pie.ShortDescription</p>
         </div>
      </div>
   </div>
}
